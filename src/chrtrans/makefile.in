default: $(FONTMAP_INC)

tables: $(TABLES)

$(MAKEUCTB) : makeuctb$o
	$(BUILD_CC) $(CC_OPTS) $(BUILD_LDFLAGS) -o $@ makeuctb$o $(INTLLIB) $(BUILD_LIBS)

makeuctb$o : $(srcdir)/UCkd.h $(srcdir)/makeuctb.c

.SUFFIXES : $o .tbl .i .h

.c$o:
@RULE_CC@
	@ECHO_CC@$(BUILD_CC) $(CC_OPTS) -c $(srcdir)/$*.c

.c.i:
@RULE_CC@
	@ECHO_CC@$(BUILD_CPP) -C $(CPP_OPTS) $(srcdir)/$*.c >$@

.tbl.h:
	./$(MAKEUCTB) $(srcdir)/$*.tbl $*.h

